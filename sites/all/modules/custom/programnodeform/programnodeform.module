function programnodeform_node_form_redirect($form, &$form_state) {
$destination = "";
  $url = drupal_get_query_parameters();

if ($url['p']) {
  $destination = "provider/" . $url['p'] . "/individuals";

} elseif($url['delete'] && $url['provnum']) {
  $memberno = $url['delete'];
  $provno = $url['provnum'];
$destination = "group/node/$provno/admin/people/delete-membership/$memberno";

}

else {

  $destination = "sdata_rp/submit_data/" . arg(1);
}
$form_state['redirect'] = $destination;
}

